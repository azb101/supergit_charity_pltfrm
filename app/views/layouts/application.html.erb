													<%= link_to " Register ", sign_up_path %>												
												</span>
								   <% end %>
						   </div>
                    </div>

					 
                    
                    <div class="topnav" style="float:left;">
                        <ul>
                            <li class="page_item page-item-1"><%= link_to "Main",    :controller=>"pages", :action=>"main" %> </li>
                            <li class="page_item page-item-1"><%= link_to "Profile", :controller=>"pages", :action=>"profile" %> </li>
                            <li class="page_item page-item-1"><%= link_to "Play",    :controller=>"pages", :action=>"play" %></li>
