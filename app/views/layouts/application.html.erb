								  <% if current_user %>
												<span style="margin-bottom:20px;"> 
													Hello , <%= current_user.name %>.
												</span><br />
												<span>
												<%= link_to " Logout ", log_out_path %>
												<span>
										  <% else %>
												<span style="margin-bottom:20px;"> 
