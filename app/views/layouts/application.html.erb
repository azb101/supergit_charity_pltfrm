                <div id="columns">
						
                    <div id="centercol">
						<div class="back_white">
							<div class="box post" id="post-41">
								<div class="content">
									<div id="Message" style="background: #fff; text-font: red;">
										<% flash.each do |name, msg| %>
											<%= content_tag :div, msg, :id => "flash_#{name}" %>
										<% end %>
									</div>
								</div>
							</div>
						</div>
						
						
					
						<%= yield %>
					</div>
					
					
					
					
					
                    <div id="rightcol">
                        <div class="box">
                            <div class="content">
                                <div class="rss">
                                    <a href="#" class="big">Rss Feed</a>
